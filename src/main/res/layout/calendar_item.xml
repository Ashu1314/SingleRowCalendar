<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="56dp"
    android:layout_height="56dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_calendar_item"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:id="@+id/tv_day_number_calendar_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="1sp"
            android:gravity="center_horizontal"
            tools:text="15"
            android:text="15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/tv_day_abbreviation_calendar_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="5sp"
            android:gravity="center_horizontal"
            tools:text="ST"
            android:text="ST"
            app:layout_constraintEnd_toEndOf="@+id/tv_day_number_calendar_item"
            app:layout_constraintStart_toStartOf="@+id/tv_day_number_calendar_item"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_day_number_calendar_item"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
