<resources>
    <declare-styleable name="SingleRowCalendar">
        <attr name="itemLayoutId" format="reference" />
        <attr name="dateTextViewId" format="reference" />
        <attr name="dayTextViewId" format="reference" />
        <attr name="monthTextViewId" format="reference" />
        <attr name="selectedItemLayoutId" format="reference" />
        <attr name="pastDaysCount" format="integer" />
        <attr name="futureDaysCount" format="integer" />
        <attr name="includeCurrentDate" format="boolean" />
        <attr name="initialPositionIndex" format="integer" />
        <attr name="dayNameFormat" format="enum">
            <enum name="threeLetters" value="3"/>
            <enum name="oneLetter" value="1"/>
            <enum name="fullName" value="0"/>
        </attr>
        <attr name="multiSelection" format="boolean" />
        <attr name="disableUnselection" format="boolean" />
        <attr name="enableLongPress" format="boolean" />
        <attr name="weekendItemLayoutId" format="reference" />
        <attr name="weekendSelectedItemLayoutId" format="reference" />
        <attr name="firstSpecialItemLayoutId" format="reference" />
        <attr name="firstSelectedSpecialItemLayoutId" format="reference" />
        <attr name="secondSpecialItemLayoutId" format="reference" />
        <attr name="secondSelectedSpecialItemLayoutId" format="reference" />
        <attr name="thirdSpecialItemLayoutId" format="reference" />
        <attr name="thirdSelectedSpecialItemLayoutId" format="reference" />
    </declare-styleable>
</resources>